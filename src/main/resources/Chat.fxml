<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<fx:root minHeight="500.0" minWidth="750.0" onKeyPressed="#rootPaneOnKeyPressed" type="StackPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane>
         <bottom>
      		<HBox BorderPane.alignment="CENTER">
      			<children>
      				<TextField fx:id="textFieldMessage" prefColumnCount="40" HBox.hgrow="ALWAYS">
      					<HBox.margin>
      						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      					</HBox.margin>
      				</TextField>
      				<Button fx:id="buttonSendMessage" mnemonicParsing="false" onAction="#buttonSendMessageOnAction" text="GÃ¶nder" HBox.hgrow="ALWAYS">
      					<HBox.margin>
      						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      					</HBox.margin>
      				</Button>
      			</children>
      		</HBox>
         </bottom>
         <center>
      		<ListView fx:id="listViewMessages" BorderPane.alignment="CENTER" />
         </center>
         <top>
      		<MenuBar BorderPane.alignment="CENTER">
      			<menus>
      				<Menu mnemonicParsing="false" text="Menu">
      					<items>
      						<MenuItem fx:id="menuItemLogOut" mnemonicParsing="false" onAction="#menuItemLogOutOnAction" text="Log Out" />
      					</items>
      				</Menu>
      			</menus>
      		</MenuBar>
         </top>
         <right>
            <GridPane BorderPane.alignment="CENTER">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Button fx:id="buttonRefreshOnlineHostAddresses" mnemonicParsing="false" onAction="#buttonRefreshOnlineHostAddressesOnAction" text="Refresh" GridPane.halignment="RIGHT" />
                  <ListView fx:id="listViewFriends" GridPane.rowIndex="1" />
                  <Button fx:id="btnOpenCamera" mnemonicParsing="false" onAction="#btnOpenCameraOnAction" text="openCamera" />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </GridPane>
         </right>
      </BorderPane>
   </children>
</fx:root>
